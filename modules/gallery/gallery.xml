<div class="gallery">
<p><breadcrumb source="galcf" sep=" &raquo; " root="Gallery" /></p>

<style type="text/css">
.folder,.file {
	width: {{file_thumb_width}}px;
	height: {{file_thumb_height}}px;
}
</style>

<div class="folders">
<folder>
<div class="folder">
<a href="{{url}}">{{icon}}
<div class="caption">{{name}}</div></a>
</div> <!-- .folder -->
</folder>
</div>

<div class="files">
<file>
<div class="file{{class}}">
<a href="{{fullname}}" class="gal">{{icon}}
<div class="caption">{{name}}</div></a>
</div> <!-- file -->
</file>
</div> <!-- .files -->

<image>
	{{butBack}}
	<b>Picture {{current}} of {{total}}</b>
	{{butForward}}

	<div class="gallery_cell">
	<table class="gallery_shadow">
		<tr>
			<td><img id="fullview" src="{{url}}" alt="{{caption}}" /></td>
			<td class="gallery_shadow_right">&nbsp;&nbsp;</td>
		</tr><tr>
			<td class="gallery_shadow_bottom"></td>
			<td class="gallery_shadow_bright"></td>
		</tr>
	</table></div>
	<div class="gallery_caption">{{caption}}</div>
</image>
<page>{{prev}} Picture {{curnum}} of {{totnum}} {{next}}</page>

</div>