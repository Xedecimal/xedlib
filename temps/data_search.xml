<div class="data-search">
<script type="text/javascript">
me = '{{me}}';
name = '{{name}}';
</script>

<results>
<div>
<result>
	<fieldset><legend>{{name}}</legend>
	<div class="actions">
		<result_button><a>{{text}}</a></result_button>
	</div>
	<ul>
	<result_field>
		<li><label>{{text}}</label>{{val}}</li>
	</result_field>
	</ul>
	</fieldset>
</result>
&laquo;
<page> <a href="{{url}}&amp;{{name}}_page={{num}}">{{num}}</a> </page>
&raquo;
</div>
</results>

<search>
<form id="data_search_{{name}}"
	action="{{app_abs}}/{{name}}/search" method="post">
<script type="text/javascript" src="{{app_abs}}/xedlib/temps/data_search.js" />
<fieldset>
<legend>Select fields to search</legend>
<ul>
<searchfield>
	<li><label><input type="checkbox" id="hider_{{id}}"
		name="{{name}}_search[{{fname}}]" class="hider" />
		{{text}}</label>
		<div class="hidden ds_field" id="hidden_{{id}}">{{field}}</div></li>
</searchfield>
</ul>
</fieldset>
<input type="submit" value="Search" />
</form>
</search>

</div>